@model ClaimSystem.ViewModels.LoginVM

@{
    ViewData["Title"] = "Login";
}

<style>
    /* --- Shared Theme Variables --- */
    :root {
        --primary-gradient: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
        --bg-gradient: linear-gradient(135deg, #4e73df, #1cc88a);
        --glass-bg: rgba(255, 255, 255, 0.95);
        --text-dark: #2d3436;
        --text-muted: #636e72;
        --border-color: rgba(0,0,0,0.08);
    }

    body {
        font-family: 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
        background: var(--bg-gradient);
        min-height: 100vh;
        color: var(--text-dark);
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0;
    }

    /* --- Containers --- */
    .main-container {
        width: 100%;
        max-width: 450px; /* Narrower for login card */
        padding: 20px;
    }

    .glass-panel {
        background: var(--glass-bg);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border-radius: 24px;
        padding: 3rem 2.5rem;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
        text-align: center;
    }

    /* --- Typography --- */
    h2 {
        font-weight: 800;
        color: var(--text-dark);
        margin-bottom: 0.5rem;
        font-size: 2rem;
    }

    .subtitle {
        color: var(--text-muted);
        margin-bottom: 2.5rem;
        font-size: 1rem;
    }

    /* --- Form Styling --- */
    .login-form {
        text-align: left;
        margin-bottom: 1.5rem;
    }

    .form-group {
        margin-bottom: 1.2rem;
    }

    .form-label {
        display: block;
        font-weight: 600;
        font-size: 0.9rem;
        color: var(--text-dark);
        margin-bottom: 0.5rem;
        margin-left: 4px;
    }

    .glass-input {
        width: 100%;
        padding: 14px 16px;
        border: 1px solid #e0e0e0;
        border-radius: 12px;
        background: #f8f9fc;
        color: var(--text-dark);
        font-size: 1rem;
        outline: none;
        transition: all 0.2s;
        box-sizing: border-box;
    }

        .glass-input:focus {
            border-color: #4e73df;
            background: white;
            box-shadow: 0 0 0 4px rgba(78, 115, 223, 0.1);
        }

    /* --- Checkbox Styling --- */
    .checkbox-group {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-top: 5px;
        margin-bottom: 25px;
    }

    .checkbox-custom {
        width: 18px;
        height: 18px;
        accent-color: #4e73df;
        cursor: pointer;
    }

    .checkbox-label {
        font-size: 0.9rem;
        color: var(--text-muted);
        cursor: pointer;
        user-select: none;
    }

    /* --- Buttons --- */
    .btn-login {
        width: 100%;
        padding: 14px;
        border-radius: 50px;
        border: none;
        font-weight: 700;
        font-size: 1.1rem;
        color: white;
        background: var(--primary-gradient);
        cursor: pointer;
        box-shadow: 0 4px 15px rgba(78, 115, 223, 0.4);
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(78, 115, 223, 0.5);
        }

    /* --- Footer Link --- */
    .back-link {
        color: var(--text-muted);
        text-decoration: none;
        font-size: 0.9rem;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        transition: color 0.2s;
    }

        .back-link:hover {
            color: #4e73df;
        }

</style>

<div class="main-container">
    <div class="glass-panel">
        <!-- Icon Header -->
        <div style="margin-bottom: 20px;">
            <div style="width:60px; height:60px; background:#eff6ff; color:#4e73df; border-radius:50%; display:flex; align-items:center; justify-content:center; margin:0 auto;">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
            </div>
        </div>

        <h2>Welcome Back</h2>
        <p class="subtitle">Sign in to access your dashboard</p>

        <form asp-action="Login" method="post" class="login-form">
            <div class="form-group">
                <label class="form-label">Email Address</label>
                <input asp-for="Email" class="glass-input" type="email" placeholder="Enter your email" required />
            </div>

            <div class="form-group">
                <label class="form-label">Password</label>
                <input asp-for="Password" class="glass-input" type="password" placeholder="Enter your password" required />
            </div>

            <div class="checkbox-group">
                <input asp-for="RememberMe" type="checkbox" class="checkbox-custom" id="rememberMeCheck" />
                <label for="rememberMeCheck" class="checkbox-label">Remember me on this device</label>
            </div>

            <button type="submit" class="btn-login">Sign In</button>
        </form>

        <a href="/" class="back-link">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" /></svg>
            Back to Home
        </a>
    </div>
</div>
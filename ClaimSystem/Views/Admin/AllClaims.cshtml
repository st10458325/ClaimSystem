@model IEnumerable<ClaimSystem.ViewModels.AdminClaimVM>

@{
    ViewData["Title"] = "All Claims";
}

<style>
    /* --- Shared Theme Styles (Same as Welcome Page) --- */
    :root {
        --primary-gradient: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
        --bg-gradient: linear-gradient(135deg, #4e73df, #1cc88a);
        --glass-bg: rgba(255, 255, 255, 0.95);
        --text-dark: #2d3436;
        --text-muted: #636e72;
        --border-color: rgba(0,0,0,0.05);
    }

    body {
        font-family: 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
        background: var(--bg-gradient);
        min-height: 100vh;
        color: var(--text-dark);
    }

    /* --- Layout Containers --- */
    .main-container {
        width: 100%;
        max-width: 1200px; /* Wider for table */
        margin: 40px auto;
        padding: 20px;
    }

    .glass-panel {
        background: var(--glass-bg);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border-radius: 24px;
        padding: 2.5rem;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
    }

    h2 {
        font-weight: 800;
        color: var(--text-dark);
        margin-bottom: 1.5rem;
        font-size: 1.8rem;
        letter-spacing: -0.5px;
        border-bottom: 2px solid var(--border-color);
        padding-bottom: 1rem;
    }

    /* --- Modern Table Styles --- */
    .table-responsive {
        overflow-x: auto;
    }

    .glass-table {
        width: 100%;
        border-collapse: separate; /* Allows for border-radius on rows */
        border-spacing: 0 8px; /* Space between rows */
        margin-top: 10px;
    }

        .glass-table thead th {
            color: var(--text-muted);
            font-weight: 600;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            padding: 0 15px 10px 15px;
            text-align: left;
            border: none;
        }

        .glass-table tbody tr {
            background: white;
            box-shadow: 0 2px 5px rgba(0,0,0,0.02);
            transition: transform 0.2s, box-shadow 0.2s;
        }

            .glass-table tbody tr:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            }

        .glass-table td {
            padding: 15px;
            vertical-align: middle;
            font-size: 0.95rem;
            color: var(--text-dark);
            border-top: 1px solid var(--border-color);
            border-bottom: 1px solid var(--border-color);
        }

            /* Rounded corners for rows */
            .glass-table td:first-child {
                border-left: 1px solid var(--border-color);
                border-top-left-radius: 12px;
                border-bottom-left-radius: 12px;
            }

            .glass-table td:last-child {
                border-right: 1px solid var(--border-color);
                border-top-right-radius: 12px;
                border-bottom-right-radius: 12px;
            }

    /* --- UI Elements --- */
    .meta-info {
        display: block;
        font-size: 0.8rem;
        color: var(--text-muted);
    }

    /* Status Badges */
    .status-badge {
        padding: 6px 12px;
        border-radius: 50px;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        display: inline-block;
    }

        /* Dynamic Status Colors */
        .status-badge.pending {
            background: #fff3cd;
            color: #856404;
        }

        .status-badge.approved {
            background: #d4edda;
            color: #155724;
        }

        .status-badge.rejected {
            background: #f8d7da;
            color: #721c24;
        }

    /* Action Buttons */
    .btn-icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 36px;
        height: 36px;
        border-radius: 50%;
        background: #f0f2f5;
        color: #4e73df;
        transition: all 0.2s;
        text-decoration: none;
    }

        .btn-icon:hover {
            background: #4e73df;
            color: white;
            transform: scale(1.1);
        }
    /*Footer*/
    .form-footer {
        border-top: 1px solid var(--border-color);
        padding-top: 1.5rem;
        margin-top: 2rem;
        display: flex;
        justify-content: center;
    }

    .btn-secondary-glass {
        color: var(--text-muted);
        background: #f1f3f5;
        padding: 10px 20px;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9rem;
        transition: background 0.2s;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }
</style>

<div class="main-container">
    <div class="glass-panel">
        <h2>All Submitted Claims</h2>

        <div class="table-responsive">
            <table class="glass-table">
                <thead>
                    <tr>
                        <th>Lecturer Details</th>
                        <th>Hours</th>
                        <th>Total ($)</th>
                        <th>Status</th>
                        <th>Date</th>
                        <th style="text-align:center;">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>
                                <strong>@x.LecturerName</strong>
                                <span class="meta-info">@x.LecturerEmail</span>
                            </td>
                            <td>@x.HoursWorked hrs</td>
                            <td style="font-weight:bold; color:#1cc88a;">@x.TotalAmount</td>
                            <td>
                                @{
                                    // Simple logic to assign color class based on status text
                                    var statusClass = x.Status?.ToLower() ?? "pending";
                                    if (statusClass.Contains("appro")) statusClass = "approved";
                                    else if (statusClass.Contains("reject")) statusClass = "rejected";
                                }
                                <span class="status-badge @statusClass">@x.Status</span>
                            </td>
                            <td>@x.SubmittedOn.ToString("MMM dd, yyyy")</td>

                            <td style="text-align:center;">
                                @if (!string.IsNullOrEmpty(x.UploadedFileName))
                                {
                                    <a href="/Claims/Download?id=@x.ClaimId" class="btn-icon" title="Download Document">
                                        <!-- Download Icon -->
                                        <svg xmlns="http://www.w3.org/2000/svg" style="width:18px; height:18px;" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                                        </svg>
                                    </a>
                                }
                                else
                                {
                                    <span style="color:#ddd;">-</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div style="text-align:center; padding: 40px; color: #999;">
                <p>No claims found in the system.</p>
            </div>
        }

        <div class="form-footer">
            <a class="btn-secondary-glass" href="/Admin/Index">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" /></svg>
                Back to User List
            </a>
        </div>
    </div>
</div>
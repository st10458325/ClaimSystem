@model IEnumerable<ClaimSystem.ViewModels.AdminUserDisplayVM>

@{
    ViewData["Title"] = "Manage Users";
}

<style>
    /* --- Shared Theme Variables --- */
    :root {
        --primary-gradient: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
        --bg-gradient: linear-gradient(135deg, #4e73df, #1cc88a);
        --glass-bg: rgba(255, 255, 255, 0.95);
        --glass-sub: rgba(248, 249, 252, 0.8);
        --text-dark: #2d3436;
        --text-muted: #636e72;
        --border-color: rgba(0,0,0,0.08);
        --danger: #e74a3b;
        --success: #1cc88a;
    }

    body {
        font-family: 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
        background: var(--bg-gradient);
        min-height: 100vh;
        color: var(--text-dark);
        padding-bottom: 40px;
    }

    /* --- Containers --- */
    .main-container {
        width: 100%;
        max-width: 1100px;
        margin: 40px auto;
        padding: 20px;
    }

    .glass-panel {
        background: var(--glass-bg);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border-radius: 24px;
        padding: 2.5rem;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
        margin-bottom: 2rem;
    }

    /* --- Header Section --- */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 2px solid var(--border-color);
        padding-bottom: 1.5rem;
        margin-bottom: 2rem;
        flex-wrap: wrap;
        gap: 15px;
    }

    h2 {
        font-weight: 800;
        color: var(--text-dark);
        margin: 0;
        font-size: 1.8rem;
        letter-spacing: -0.5px;
    }

    .header-actions {
        display: flex;
        gap: 10px;
    }

    /* --- Buttons --- */
    .btn-glass {
        padding: 10px 20px;
        border-radius: 50px;
        font-weight: 600;
        font-size: 0.9rem;
        text-decoration: none;
        border: none;
        cursor: pointer;
        transition: all 0.2s;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-primary-glass {
        background: var(--primary-gradient);
        color: white;
        box-shadow: 0 4px 10px rgba(78, 115, 223, 0.3);
    }

        .btn-primary-glass:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(78, 115, 223, 0.4);
            color: white;
        }

    .btn-secondary-glass {
        background: #f1f3f5;
        color: var(--text-muted);
    }

        .btn-secondary-glass:hover {
            background: #e9ecef;
            color: var(--text-dark);
        }

    /* --- Table Styles --- */
    .table-responsive {
        overflow-x: auto;
    }

    .glass-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 8px;
    }

        .glass-table th {
            color: var(--text-muted);
            font-weight: 600;
            font-size: 0.85rem;
            text-transform: uppercase;
            padding: 0 15px 10px 15px;
            text-align: left;
        }

        .glass-table tbody tr {
            background: white;
            box-shadow: 0 2px 5px rgba(0,0,0,0.02);
            transition: transform 0.2s;
        }

            .glass-table tbody tr:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            }

        .glass-table td {
            padding: 15px;
            vertical-align: middle;
            border-top: 1px solid var(--border-color);
            border-bottom: 1px solid var(--border-color);
        }

            .glass-table td:first-child {
                border-left: 1px solid var(--border-color);
                border-top-left-radius: 12px;
                border-bottom-left-radius: 12px;
            }

            .glass-table td:last-child {
                border-right: 1px solid var(--border-color);
                border-top-right-radius: 12px;
                border-bottom-right-radius: 12px;
            }

    /* --- Badges & Icons --- */
    .role-badge {
        background: #e3f2fd;
        color: #0d47a1;
        padding: 4px 10px;
        border-radius: 6px;
        font-size: 0.75rem;
        font-weight: 700;
        margin-right: 4px;
        letter-spacing: 0.3px;
    }

    .action-btn {
        width: 32px;
        height: 32px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
        border: none;
        cursor: pointer;
        margin-left: 4px;
    }

    .btn-edit {
        background: #e0f2f1;
        color: #00695c;
    }

        .btn-edit:hover {
            background: #b2dfdb;
        }

    .btn-delete {
        background: #ffebee;
        color: #c62828;
    }

        .btn-delete:hover {
            background: #ffcdd2;
        }

    /* --- Export Toolbar Section --- */
    .export-toolbar {
        background: var(--glass-sub);
        border-radius: 16px;
        padding: 1.5rem;
        margin-top: 3rem;
        border: 1px solid var(--border-color);
    }

    .toolbar-title {
        font-size: 1rem;
        font-weight: 700;
        margin-bottom: 1rem;
        color: var(--text-dark);
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .filter-form {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
        align-items: center;
    }

    .glass-input {
        padding: 10px 15px;
        border: 1px solid #e0e0e0;
        border-radius: 10px;
        background: white;
        color: var(--text-dark);
        outline: none;
        font-size: 0.9rem;
    }

        .glass-input:focus {
            border-color: #4e73df;
            box-shadow: 0 0 0 3px rgba(78, 115, 223, 0.1);
        }

</style>

<div class="main-container">
    <div class="glass-panel">

        <!-- Header -->
        <div class="page-header">
            <h2>User Management</h2>
            <div class="header-actions">
                <a class="btn-glass btn-secondary-glass" href="/Home/Index">
                    Home
                </a>
                <a class="btn-glass btn-secondary-glass" href="/Admin/AllClaims">
                    View Claims
                </a>
                <a class="btn-glass btn-primary-glass" href="/Admin/CreateUser">
                    <!-- Plus Icon -->
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" /></svg>
                    Create User
                </a>
            </div>
        </div>

        <!-- Users Table -->
        <div class="table-responsive">
            <table class="glass-table">
                <thead>
                    <tr>
                        <th>Full Name</th>
                        <th>Email Address</th>
                        <th>Assigned Roles</th>
                        <th style="text-align:right;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var u in Model)
                    {
                        <tr>
                            <td style="font-weight:600;">@u.FullName</td>
                            <td style="color:var(--text-muted);">@u.Email</td>
                            <td>
                                @if (u.Roles != null && u.Roles.Any())
                                {
                                    foreach (var role in u.Roles)
                                    {
                                        <span class="role-badge">@role</span>
                                    }
                                }
                                else
                                {
                                    <span style="color:#ccc; font-size:0.85rem;">No Roles</span>
                                }
                            </td>
                            <td style="text-align:right;">
                                <a href="/Admin/EditUser?id=@u.Id" class="action-btn btn-edit" title="Edit User">
                                    <!-- Pencil Icon -->
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" /></svg>
                                </a>

                                <form method="post" asp-action="DeleteUser" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                    <input type="hidden" name="id" value="@u.Id" />
                                    <button class="action-btn btn-delete" title="Delete User">
                                        <!-- Trash Icon -->
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" /></svg>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div style="text-align:center; padding: 30px; color: var(--text-muted);">
                No users found in the system.
            </div>
        }

        <!-- Reports Toolbar -->
        <div class="export-toolbar">
            <div class="toolbar-title">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /></svg>
                Generate Reports
            </div>

            <form method="get" asp-action="ExportPdf" class="filter-form">
                <input type="date" name="from" class="glass-input" required />
                <span style="color:var(--text-muted); font-size:0.9rem;">to</span>
                <input type="date" name="to" class="glass-input" required />

                <select name="status" class="glass-input">
                    <option value="">All Statuses</option>
                    <option value="Pending">Pending</option>
                    <option value="UnderReview">Under Review</option>
                    <option value="Approved">Approved</option>
                    <option value="Rejected">Rejected</option>
                </select>

                <button type="submit" class="btn-glass btn-primary-glass" style="padding: 10px 18px;">
                    Generate PDF
                </button>

                <div style="flex-grow:1; text-align:right;">
                    <a href="/Admin/ExportPdf" style="color:var(--text-muted); text-decoration:underline; font-size:0.9rem;">Download All Data</a>
                </div>
            </form>
        </div>

    </div>
</div>
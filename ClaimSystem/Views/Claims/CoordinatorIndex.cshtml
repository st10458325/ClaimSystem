@model IEnumerable<ClaimSystem.Models.ClaimRecord>

@{
    ViewData["Title"] = "Coordinator Dashboard";
}

<style>
    /* --- Shared Theme Variables --- */
    :root {
        --primary-gradient: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
        --bg-gradient: linear-gradient(135deg, #4e73df, #1cc88a);
        --glass-bg: rgba(255, 255, 255, 0.95);
        --text-dark: #2d3436;
        --text-muted: #636e72;
        --border-color: rgba(0,0,0,0.08);
        --success-color: #1cc88a;
        --danger-color: #e74a3b;
    }

    body {
        font-family: 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
        background: var(--bg-gradient);
        min-height: 100vh;
        color: var(--text-dark);
    }

    /* --- Containers --- */
    .main-container {
        width: 100%;
        max-width: 1200px;
        margin: 40px auto;
        padding: 20px;
    }

    .glass-panel {
        background: var(--glass-bg);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border-radius: 24px;
        padding: 2.5rem;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
    }

    /* --- Typography --- */
    h2 {
        font-weight: 800;
        color: var(--text-dark);
        margin-bottom: 1.5rem;
        font-size: 1.8rem;
        letter-spacing: -0.5px;
        border-bottom: 2px solid var(--border-color);
        padding-bottom: 1rem;
    }

    /* --- Table Styles --- */
    .table-responsive {
        overflow-x: auto;
    }

    .glass-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 8px;
    }

        .glass-table th {
            color: var(--text-muted);
            font-weight: 600;
            font-size: 0.85rem;
            text-transform: uppercase;
            padding: 0 15px 10px 15px;
            text-align: left;
        }

        .glass-table tbody tr {
            background: white;
            box-shadow: 0 2px 5px rgba(0,0,0,0.02);
            transition: transform 0.2s;
        }

            .glass-table tbody tr:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            }

        .glass-table td {
            padding: 15px;
            vertical-align: middle;
            border-top: 1px solid var(--border-color);
            border-bottom: 1px solid var(--border-color);
            font-size: 0.95rem;
        }

            .glass-table td:first-child {
                border-left: 1px solid var(--border-color);
                border-top-left-radius: 12px;
                border-bottom-left-radius: 12px;
            }

            .glass-table td:last-child {
                border-right: 1px solid var(--border-color);
                border-top-right-radius: 12px;
                border-bottom-right-radius: 12px;
            }

    /* --- Status Badges --- */
    .status-badge {
        padding: 6px 12px;
        border-radius: 50px;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        display: inline-block;
    }

    .status-pending {
        background: #fff3cd;
        color: #856404;
    }

    .status-review {
        background: #e2e6ea;
        color: #383d41;
    }

    /* --- Action Form Elements --- */
    .action-wrapper {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .reason-input {
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        padding: 6px 10px;
        font-size: 0.85rem;
        width: 120px;
        transition: width 0.2s;
        outline: none;
    }

        .reason-input:focus {
            border-color: var(--danger-color);
            width: 160px;
            box-shadow: 0 0 0 2px rgba(231, 74, 59, 0.1);
        }

    .btn-action {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 34px;
        height: 34px;
        border-radius: 8px;
        border: none;
        cursor: pointer;
        transition: all 0.2s;
        color: white;
    }

    .btn-approve {
        background: #d4edda;
        color: #155724;
    }

        .btn-approve:hover {
            background: #c3e6cb;
            transform: scale(1.05);
        }

    .btn-reject {
        background: #f8d7da;
        color: #721c24;
    }

        .btn-reject:hover {
            background: #f5c6cb;
            transform: scale(1.05);
        }

    /* Helper for Total Amount */
    .amount-highlight {
        font-weight: 700;
        color: var(--success-color);
    }

    .btn-glass {
        padding: 10px 20px;
        border-radius: 50px;
        font-weight: 600;
        font-size: 0.9rem;
        text-decoration: none;
        border: none;
        cursor: pointer;
        transition: all 0.2s;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-secondary-glass {
        background: #f1f3f5;
        color: var(--text-muted);
    }

        .btn-secondary-glass:hover {
            background: #e9ecef;
            color: var(--text-dark);
        }

</style>

<div class="main-container">
    <div class="glass-panel">
        <h2>
            Claims Review  <a style="margin-left:50%" class="btn-glass btn-secondary-glass" href="/Home/Index">
                Home
            </a>
        </h2>
       
        <p style="color:var(--text-muted); margin-bottom:1.5rem;">Manage pending and under-review claims.</p>

        <div class="table-responsive">
            <table class="glass-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Lecturer</th>
                        <th>Work Info</th>
                        <th>Amount</th>
                        <th>Current Status</th>
                        <th>Review Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td style="color:var(--text-muted); font-family:monospace;">#@c.ClaimId</td>
                            <td>
                                <strong>@c.Lecturer?.FullName</strong>
                            </td>
                            <td>@c.HoursWorked hrs</td>
                            <td class="amount-highlight">$@c.TotalAmount</td>
                            <td>
                                <span class="status-badge @(c.Status == "Pending" ? "status-pending" : "status-review")">
                                    @c.Status
                                </span>
                            </td>
                            <td>
                                <div class="action-wrapper">
                                    <!-- Approve Form -->
                                    <form method="post" asp-action="Approve">
                                        <input type="hidden" name="id" value="@c.ClaimId" />
                                        <button type="submit" class="btn-action btn-approve" title="Approve Claim">
                                            <!-- Check Icon -->
                                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                                        </button>
                                    </form>

                                    <!-- Reject Form -->
                                    <form method="post" asp-action="Reject" style="display:flex; align-items:center; gap:5px;">
                                        <input type="hidden" name="id" value="@c.ClaimId" />
                                        <input name="reason" class="reason-input" placeholder="Reject reason..." required />
                                        <button type="submit" class="btn-action btn-reject" title="Reject Claim">
                                            <!-- X Icon -->
                                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div style="text-align:center; padding: 40px; color: #999;">
                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="opacity:0.2; margin-bottom:10px;"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                <p>All caught up! No pending claims.</p>
            </div>
        }
    </div>
</div>
@model IEnumerable<ClaimSystem.Models.ClaimRecord>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ClaimSystem.Models.ApplicationUser> SignInManager
@inject UserManager<ClaimSystem.Models.ApplicationUser> UserManager

@{
    ViewData["Title"] = "My Claims";
}

<style>
    /* --- Shared Theme Variables --- */
    :root {
        --primary-gradient: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
        --bg-gradient: linear-gradient(135deg, #4e73df, #1cc88a);
        --glass-bg: rgba(255, 255, 255, 0.95);
        --text-dark: #2d3436;
        --text-muted: #636e72;
        --border-color: rgba(0,0,0,0.08);
        --success-color: #1cc88a;
    }

    body {
        font-family: 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
        background: var(--bg-gradient);
        min-height: 100vh;
        color: var(--text-dark);
    }

    /* --- Containers --- */
    .main-container {
        width: 100%;
        max-width: 1000px;
        margin: 40px auto;
        padding: 20px;
    }

    .glass-panel {
        background: var(--glass-bg);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border-radius: 24px;
        padding: 2.5rem;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
    }

    /* --- Header & Typography --- */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 2px solid var(--border-color);
        padding-bottom: 1.5rem;
        margin-bottom: 2rem;
    }

    h2 {
        font-weight: 800;
        color: var(--text-dark);
        margin: 0;
        font-size: 1.8rem;
        letter-spacing: -0.5px;
    }

    /* --- Table Styles --- */
    .table-responsive { overflow-x: auto; }

    .glass-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 8px;
    }

    .glass-table th {
        color: var(--text-muted);
        font-weight: 600;
        font-size: 0.85rem;
        text-transform: uppercase;
        padding: 0 15px 10px 15px;
        text-align: left;
    }

    .glass-table tbody tr {
        background: white;
        box-shadow: 0 2px 5px rgba(0,0,0,0.02);
        transition: transform 0.2s;
    }
    .glass-table tbody tr:hover { transform: translateY(-2px); box-shadow: 0 5px 15px rgba(0,0,0,0.05); }

    .glass-table td {
        padding: 15px;
        vertical-align: middle;
        border-top: 1px solid var(--border-color);
        border-bottom: 1px solid var(--border-color);
        font-size: 0.95rem;
    }
    .glass-table td:first-child { border-left: 1px solid var(--border-color); border-top-left-radius: 12px; border-bottom-left-radius: 12px; }
    .glass-table td:last-child { border-right: 1px solid var(--border-color); border-top-right-radius: 12px; border-bottom-right-radius: 12px; }

    /* --- Status Badges --- */
    .status-badge {
        padding: 6px 12px;
        border-radius: 50px;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        display: inline-block;
    }
    .status-pending { background: #fff3cd; color: #856404; }
    .status-approved { background: #d4edda; color: #155724; }
    .status-rejected { background: #f8d7da; color: #721c24; }

    /* --- Buttons --- */
    .btn-primary-glass {
        padding: 10px 20px;
        border-radius: 50px;
        font-weight: 600;
        font-size: 0.9rem;
        color: white;
        background: var(--primary-gradient);
        text-decoration: none;
        box-shadow: 0 4px 10px rgba(78, 115, 223, 0.3);
        transition: all 0.2s;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }
    .btn-primary-glass:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 15px rgba(78, 115, 223, 0.4);
        color: white;
    }

    .btn-icon-small {
        display: inline-flex;
        align-items: center;
        gap: 5px;
        padding: 6px 12px;
        border-radius: 8px;
        font-size: 0.85rem;
        text-decoration: none;
        background: #e3f2fd;
        color: #1565c0;
        font-weight: 600;
        transition: background 0.2s;
    }
    .btn-icon-small:hover { background: #bbdefb; }

    /* --- Footer / Auth --- */
    .footer-section {
        border-top: 1px solid var(--border-color);
        padding-top: 1.5rem;
        margin-top: 2rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
    }

    .user-badge {
        font-size: 0.85rem;
        color: var(--text-muted);
        background: #fff;
        padding: 6px 14px;
        border-radius: 20px;
        border: 1px solid var(--border-color);
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

    .btn-logout-link {
        background: none;
        border: none;
        color: #e74a3b;
        font-weight: 600;
        font-size: 0.85rem;
        cursor: pointer;
        text-decoration: underline;
    }

</style>

<div class="main-container">
    <div class="glass-panel">
        
        <div class="page-header">
            <h2>My Claim History</h2>
            <a class="btn-primary-glass" href="/Claims/Create">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" /></svg>
                Submit New Claim
            </a>
        </div>

        <div class="table-responsive">
            <table class="glass-table">
                <thead>
                    <tr>
                        <th>Claim ID</th>
                        <th>Date Submitted</th>
                        <th>Hours / Rate</th>
                        <th>Total Amount</th>
                        <th>Status</th>
                        <th style="text-align:right;">Document</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td style="color:var(--text-muted); font-family:monospace;">#@c.ClaimId</td>
                            <td>@c.SubmittedOn.ToString("MMM dd, yyyy")</td>
                            <td>
                                <strong>@c.HoursWorked hrs</strong> 
                                <span style="color:var(--text-muted); font-size:0.85rem;">@@R @c.HourlyRate/hr</span>
                            </td>
                            <td style="font-weight:700; color:var(--success-color);">R @c.TotalAmount</td>
                            <td>
                                @{
                                    var statusLower = c.Status?.ToLower() ?? "pending";
                                    var statusClass = "status-pending";
                                    if (statusLower.Contains("appro")) { statusClass = "status-approved"; }
                                    else if (statusLower.Contains("reject")) { statusClass = "status-rejected"; }
                                }
                                <span class="status-badge @statusClass">@c.Status</span>
                            </td>
                            <td style="text-align:right;">
                                @if (!string.IsNullOrEmpty(c.UploadedFileName))
                                {
                                    <a class="btn-icon-small" href="/Claims/Download?id=@c.ClaimId" title="Download Receipt">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" /></svg>
                                        Download
                                    </a>
                                }
                                else
                                {
                                    <span style="color:#ddd; font-size:0.9rem;">-</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div style="text-align:center; padding: 40px; color: var(--text-muted);">
                <p>You haven't submitted any claims yet.</p>
            </div>
        }

        <div class="footer-section">
            @if (SignInManager.IsSignedIn(User))
            {
                <span class="user-badge">
                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" /></svg>
                    @User.Identity.Name
                </span>
                <form method="post" asp-controller="Account" asp-action="Logout">
                    <button type="submit" class="btn-logout-link">Sign Out</button>
                </form>
            }
            else
            {
                <a class="btn-logout-link" href="/Account/Login">Login</a>
            }
        </div>

    </div>
</div>